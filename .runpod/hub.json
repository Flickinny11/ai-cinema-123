{
  "version": "2.0.0",
  "name": "Cinema AI Pipeline",
  "description": "Ultra-fast AI video generation pipeline optimized for speed. 5-15s videos in 1-8s generation time with fast cold starts.",
  "author": "Flickinny11",
  "git_url": "https://github.com/Flickinny11/ai-cinema-123",
  "image_name": "cinema-ai-pipeline",
  "category": "AI/ML",
  "keywords": [
    "video-generation",
    "ai",
    "hunyuan",
    "ltx-video",
    "musicgen",
    "voice-cloning"
  ],
  "build": {
    "dockerfile_path": "Dockerfile"
  },
  "template": {
    "name": "cinema-ai-pipeline",
    "container_disk_in_gb": 20,
    "volume_in_gb": 30,
    "volume_mount_path": "/runpod-volume",
    "dockerfile_path": "Dockerfile",
    "env": [
      {
        "key": "HF_HOME",
        "value": "/runpod-volume/cache",
        "description": "Hugging Face cache directory"
      },
      {
        "key": "PYTORCH_CUDA_ALLOC_CONF",
        "value": "max_split_size_mb:512",
        "description": "CUDA memory optimization"
      }
    ],
    "is_public": true
  },
  "serverless": {
    "scaled_settings": {
      "min_workers": 0,
      "max_workers": 5,
      "scale_type": "QUEUE_DELAY", 
      "scale_value": 10,
      "idle_timeout": 300
    },
    "gpu_types": [
      "NVIDIA RTX A6000",
      "NVIDIA A100-SXM4-40GB",
      "NVIDIA A100-SXM4-80GB"
    ],
    "supported_input_types": [
      "script_to_video",
      "single_scene", 
      "batch_scenes",
      "concept_to_script",
      "natural_language_prompt",
      "health_check"
    ]
  },
  "runtime": {
    "handler": "runpod_handler_production.py",
    "handler_function": "handler",
    "python_version": "3.10",
    "container_start_timeout": 300
  },
  "schema": {
    "input": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "script_to_video",
            "single_scene",
            "batch_scenes", 
            "concept_to_script",
            "natural_language_prompt",
            "health_check"
          ],
          "description": "Type of processing to perform"
        },
        "script": {
          "type": "string",
          "description": "Script text for script_to_video type"
        },
        "scene": {
          "type": "object",
          "description": "Scene configuration for single_scene type"
        },
        "scenes": {
          "type": "array",
          "description": "Array of scenes for batch_scenes type"
        },
        "concept": {
          "type": "string",
          "description": "Concept description for concept_to_script type"
        },
        "prompt": {
          "type": "string",
          "description": "Natural language prompt with multi-character dialogue for natural_language_prompt type"
        },
        "options": {
          "type": "object",
          "description": "Additional processing options"
        }
      }
    },
    "output": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string",
          "description": "Success or error status"
        },
        "videos": {
          "type": "array",
          "description": "Generated video URLs"
        },
        "processing_time": {
          "type": "number",
          "description": "Processing time in seconds"
        }
      }
    }
  }
}